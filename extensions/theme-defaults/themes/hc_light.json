{
  "$schema": "vscode://schemas/color-theme",
  "name": "GirelliDev OLED Crimson",
  "type": "dark",
  "colors": {
    "editor.background": "#0A0A0A",
    "editor.foreground": "#E8E8E8",
    "editorCursor.foreground": "#FF4040",
    "editorLineNumber.foreground": "#4A4A4A",
    "editorLineNumber.activeForeground": "#FF4C4C",
    "editor.selectionBackground": "#4C0000",
    "editor.inactiveSelectionBackground": "#300000",
    "editorWhitespace.foreground": "#202020",
    "sideBar.background": "#0E0E0E",
    "sideBar.foreground": "#B0B0B0",
    "sideBarSectionHeader.background": "#121212",
    "activityBar.background": "#101010",
    "activityBar.foreground": "#FF4040",
    "statusBar.background": "#101010",
    "statusBar.foreground": "#E8E8E8",
    "tab.activeBackground": "#1A1A1A",
    "tab.inactiveBackground": "#0C0C0C",
    "tab.activeForeground": "#FF4040",
    "tab.inactiveForeground": "#777777",
    "terminal.background": "#0A0A0A",
    "terminal.foreground": "#DDDDDD",
    "terminalCursor.foreground": "#FF4040",
    "terminal.ansiBlack": "#0A0A0A",
    "terminal.ansiRed": "#FF4040",
    "terminal.ansiGreen": "#73D216",
    "terminal.ansiYellow": "#FFD700",
    "terminal.ansiBlue": "#3465A4",
    "terminal.ansiMagenta": "#AD7FA8",
    "terminal.ansiCyan": "#34E2E2",
    "terminal.ansiWhite": "#E8E8E8"
  },
  "tokenColors": [
    { "scope": "comment", "settings": { "foreground": "#5A5A5A", "fontStyle": "italic" } },
    { "scope": "keyword", "settings": { "foreground": "#FF4040", "fontStyle": "bold" } },
    { "scope": "string", "settings": { "foreground": "#FF6E6E" } },
    { "scope": "number", "settings": { "foreground": "#FF3E3E" } },
    { "scope": "constant", "settings": { "foreground": "#FF5050" } },
    { "scope": "variable", "settings": { "foreground": "#E8E8E8" } },
    { "scope": "function", "settings": { "foreground": "#FF5050" } },
    { "scope": "type", "settings": { "foreground": "#FF7373" } },
    { "scope": "class", "settings": { "foreground": "#FF6B6B" } },
    { "scope": "operator", "settings": { "foreground": "#FF4040" } },
    { "scope": "punctuation", "settings": { "foreground": "#A0A0A0" } },
    { "scope": "invalid", "settings": { "foreground": "#ff0000", } },

    { "scope": "keyword.c", "settings": { "foreground": "#FF4040" } },
    { "scope": "variable.c", "settings": { "foreground": "#E8E8E8" } },
    { "scope": "string.c", "settings": { "foreground": "#FF6E6E" } },

    { "scope": "keyword.python", "settings": { "foreground": "#FF4040" } },
    { "scope": "string.python", "settings": { "foreground": "#FF6E6E" } },
    { "scope": "function.python", "settings": { "foreground": "#FF5050" } },

    { "scope": "keyword.javascript", "settings": { "foreground": "#FF4040" } },
    { "scope": "variable.javascript", "settings": { "foreground": "#E8E8E8" } },
    { "scope": "string.javascript", "settings": { "foreground": "#FF6E6E" } },
    { "scope": "function.javascript", "settings": { "foreground": "#FF5050" } },

    { "scope": "keyword.php", "settings": { "foreground": "#FF4040" } },
    { "scope": "variable.php", "settings": { "foreground": "#E8E8E8" } },
    { "scope": "string.php", "settings": { "foreground": "#FF6E6E" } },
    { "scope": "function.php", "settings": { "foreground": "#FF5050" } },

    { "scope": "keyword.shell", "settings": { "foreground": "#FF4040" } },
    { "scope": "string.shell", "settings": { "foreground": "#FF6E6E" } },
    { "scope": "variable.shell", "settings": { "foreground": "#E8E8E8" } },

    { "scope": "keyword.json", "settings": { "foreground": "#FF4040" } },
    { "scope": "string.json", "settings": { "foreground": "#FF6E6E" } },
    { "scope": "number.json", "settings": { "foreground": "#FF3E3E" } }
  ]
}
